{
	"manifest_version": 2,

	"name": "No Summary For You!",
	"description": "Hide summaries for movies and TV-series on Netflix.",
	"version": "1.0",

	"permissions": ["declarativeContent"],

	"content_scripts": [{
		"matches": ["https://netflix.com/*", "https://*.netflix.com/*"],
		"css": ["Styles/netflix.css"],
		"js": ["Scripts/ContentScripts/netflix.js"]
	}],

	"background": {
		"scripts": ["Scripts/EventPages/netflix.js"],
		"persistent": false
	},

	"page_action": {
		"default_title": "No Summary For You!"
	}
}
